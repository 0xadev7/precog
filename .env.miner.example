# Network Configuration
# Options: localnet, testnet, finney
NETWORK=testnet

# Wallet Configuration
COLDKEY=miner
MINER_HOTKEY=default

# Node Configuration
MINER_NAME=miner
MINER_PORT=8092

# Miner Settings
TIMEOUT=16
VPERMIT_TAO_LIMIT=2
FORWARD_FUNCTION=base_miner

# Logging
# Options: info, debug, trace
LOGGING_LEVEL=debug

# Local Subtensor Configuration
# Only used if you run your own subtensor node
LOCALNET=ws://127.0.0.1:9945

# New Miner Configuration
HORIZON_MIN=60
LOOKBACK_DAYS=2
USE_DERIVATIVES=1
MAX_OI_MARKETS=5
DERIV_LOOKBACK_DAYS=3
SENTIMENT_IMPACT_CAP=0.25

ENABLE_SOCIAL_SENTIMENT=1
ENABLE_REDDIT_SENTIMENT=1
ENABLE_STOCKTWITS_SENTIMENT=1
